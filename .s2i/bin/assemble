#!/bin/bash

shopt -s dotglob
echo "---> Installing application source ..."
mv /tmp/src/* ./

# check for PyPi conf
if [ ! -f ./pypirc ]; then
    echo "ERROR: no PyPi configuration found"
    exit 1
fi

# check for bot conf
if [ ! -f ./release-conf.yaml ]; then
    echo "ERROR: no bot configuration found"
    exit 1
fi
